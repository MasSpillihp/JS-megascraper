<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Link Checker</title>
    <link rel="stylesheet" href="css/main.css" />
    <link rel="stylesheet" href="css/table.css">
  </head>
  <body>
    <header class="header">
      <nav class="navbar">
        <ul class="nav-list">
          <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
          <li class="nav-item"><a href="/results" class="nav-link">Results</a></li>
          <li class="nav-item"><a href="#" class="nav-link">Link 3</a></li>
          <li class="nav-item"><a href="#" class="nav-link">Link 4</a></li>
        </ul>
      </nav>
    </header>
    <main class="main">
      <div class="card">
        <h1 class="card-heading">MEGA link checker</h1>
        <h2 class="card-heading__h2"><%= caseref %></h2>
        <div class="table-container">
            <table class="table-details">
            <thead>
                <tr>
                    <th>Link</th>
                    <th>Result</th>
                    <th>Check</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i = 0; i < urls.length; i++) { %>
                <tr>
                <td><%= urls[i].url %></td>
                <td>..waiting..</td>
                <td><a href="/scrape?url=<%= encodeURIComponent(urls[i].url) %>">Check</a></td>


                </tr>
                <% } %>
            </tbody>
            </table>
            
        </div>
      </div>
    </main>
    <footer class="footer">
      <p class="footer-text">Sam Phillips Â© 2023</p>
    </footer>
  </body>
</html>
